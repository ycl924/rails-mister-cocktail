<div class="row">
  <div class="col">
    <% if @query %>
    <p>You searched for <strong>
        <%= @query %></strong>. We found
      <%= @cocktails.count %> cocktails out of our
      <%= Cocktail.count %> on our website.</p>
    <% else %>
    <h2>All
      <%= Cocktail.count %> cocktails.
    </h2>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <% @cocktails.each do |cocktail| %>
    <div class="card">
      <img src=<%=cocktail.picture %> class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </h5>

      </div>
    </div>
    <% end %>
  </div>
</div>
